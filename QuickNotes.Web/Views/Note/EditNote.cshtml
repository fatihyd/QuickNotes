<!-- Declares that the view is strongly typed to a specific model (EditNoteViewModel) -->
<!-- Razor helpers like asp-for rely on the model to generate the correct HTML attributes for the form -->
@model EditNoteViewModel

@{
    ViewData["Title"] = "New Note";
}

<div class="text-center">
    <h1 class="display-4">Edit Note</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditNote" method="post">
                <div class="card my-3 shadow-sm">
                    <!-- Card Header -->
                    <div class="card-header">
                        <input asp-for="Title" class="form-control" placeholder="@Model.Title" />
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <textarea asp-for="Text" class="form-control" rows="5" placeholder="@Model.Text"></textarea>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-primary me-2">Edit</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>