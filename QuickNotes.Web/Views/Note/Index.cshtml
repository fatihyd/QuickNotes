@model IEnumerable<NoteViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <!-- Create Note Button -->
    <div class="d-flex justify-content-center mb-3">
        <a href="/Note/CreateNote" class="btn btn-primary">Create Note...</a>
    </div>

    <div class="row">
        <!-- Newest First -->
        @foreach (var note in Model.OrderByDescending(n => n.Id))
        {
            <div class="col-md-4">
                <div class="card my-3 shadow-sm">
                    <!-- Card Header -->
                    <div class="card-header">
                        <strong>@note.Title</strong>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <!-- Note Text -->
                        <p class="card-text">@note.Text</p>

                        <!-- Actions and Date -->
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <!-- Buttons Section (Left-Aligned) -->
                            <div class="d-flex">
                                <a asp-action="EditNote" asp-route-id="@note.Id" class="btn btn-warning me-2">Edit</a>
                                <form asp-action="DeleteNote" method="post">
                                    <input type="hidden" name="id" value="@note.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>

                            <!-- Date Section (Right-Aligned) -->
                            <div class="date-box px-2 py-1 text-muted">
                                <small>@note.FormattedDateCreated</small>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .date-box {
        border: 1px solid #ddd;
        border-radius: 12px;
        background-color: #f9f9f9;
        display: inline-block;
        text-align: right;
    }
</style>