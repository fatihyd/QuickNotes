@model AppUserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
ViewData["Title"] = "Sign Up";
}

<div class="text-center">
    <h3 class="display-4">Sign Up</h3>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="SignUp" method="post">
                <div class="card my-3 shadow-sm">
                    <!-- Card Header -->
                    <div class="card-header">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        <!-- You can add a header title here if needed -->
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <!-- Full Name Field -->
                        <div class="mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Full Name..." required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Username Field -->
                        <div class="mb-3">
                            <input asp-for="UserName" class="form-control" placeholder="Username..." required />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email..." required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password..." required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary me-2">Sign Up</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
